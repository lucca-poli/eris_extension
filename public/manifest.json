{
  "name": "Secure chat for Whatsapp Web",
  "description": "Enables secure conversations in Whatsapp Web. A secure conversation grants that what is said was not manipulated (e.g. deleted or edited messages).",
  "version": "1.0",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs",
    "commands"
  ],
  "manifest_version": 3,
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*"
      ],
      "js": [
        "js/front.js"
      ]
    },
    {
      "js": [
        "js/injected_api.js"
      ],
      "matches": [
        "https://web.whatsapp.com/*"
      ],
      "world": "MAIN",
      "run_at": "document_start"
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://web.whatsapp.com/*"
    ]
  },
  "web_accessible_resources": [
    {
      "matches": [
        "https://web.whatsapp.com/*"
      ],
      "resources": [
        "js/injected_api.js",
        "js/front.js"
      ]
    }
  ],
  "action": {
    "default_popup": "default_popup.html",
    "default_title": "Chat Auditor Debug Window.",
    "default_icon": "icons/app_logo.png"
  },
  "commands": {
    "reload": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Reload the extension"
    }
  }
}
